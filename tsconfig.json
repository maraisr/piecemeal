{
	"extends": "@marais/tsconfig",
	"compilerOptions": {
		"rootDir": ".",
		"baseUrl": ".",
		"target": "ES2019",
		"outDir": "dist",
		"declaration": false,
		"removeComments": false,
		"lib": ["DOM", "WebWorker", "ESNext"],
		"paths": {
			"piecemeal": ["./src/index.ts"],
			"piecemeal/*": ["./src/*"]
		}
	},
	"include": ["src/**/*", "examples/**/*"],
	"exclude": ["node_modules"]
}
